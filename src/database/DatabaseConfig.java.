package database;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

/**
 * Level 2: Database Configuration
 * Responsibility: Establishing a secure link to the SQL database.
 */
public class DatabaseConfig {
    // Database credentials - Update these based on your local setup
    private static final String URL = "jdbc:mysql://localhost:3306/inventory_db";
    private static final String USER = "root";
    private static final String PASSWORD = "your_secure_password"; 

    public static Connection getConnection() {
        Connection conn = null;
        try {
            conn = DriverManager.getConnection(URL, USER, PASSWORD);
            System.out.println("✅ Database connection established!");
        } catch (SQLException e) {
            System.err.println("❌ Connection Error: " + e.getMessage());
        }
        return conn;
    }
}

